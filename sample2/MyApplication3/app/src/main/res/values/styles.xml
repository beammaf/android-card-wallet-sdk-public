<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout.CustomUnderline" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.HintTextAppearance</item>
        <item name="colorControlNormal">@color/gold_lighter</item>
        <item name="colorControlActivated">@color/gold_lighter</item>
        <item name="colorControlHighlight">@color/gold_lighter</item>
    </style>
    <style name="AppTheme.HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/gold_darker</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="android:colorControlHighlight">@color/red</item>
        <item name="android:colorControlActivated">@color/red</item>
    </style>

    <style name="AppTheme.Button.CTA" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
